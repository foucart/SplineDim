#############################
## First example of T-mesh ##
#############################

def Tmesh1():
   (v0, v1, v2, v3, v4, v5, v6, v7, v8) = ( (0,0), (2,0), (2,2), (0,2), (-2,2), (-2,0), (-2,-2), (0,-2), (2,-2) )
   (sq1, sqq2, sq3, sq4) = ( (v0,v1,v2,v3), (v0,v3,v4,v5), (v0,v5,v6,v7), (v0,v7,v8,v1) )
   return (sq1, sqq2, sq3, sq4)

##############################
## Second example of T-mesh ##
##############################

def Tmesh2():
   (v0, v1, v2, v3, v4, v5, v6, v7) = ( (0,0), (2,0), (2,2), (0,2), (-2,2), (-2,-2), (0,-2), (2,-2) )
   (rec1, rec2, rec3) = ( (v0,v1,v2,v3), (v3,v4,v5,v6), (v0,v6,v7,v1) )
   return (rec1, rec2, rec3)

