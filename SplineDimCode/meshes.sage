def Tmesh3():
   (v0, v1, v2, v3, v4, v5, v6, v7, v8, v9) = ( (0,0), (2,0), (2,2), (0,2), (-2,2), (-2,-2), (0,-2), (2,-2), (1,0), (1,-2) )
